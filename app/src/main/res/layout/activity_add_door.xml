<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".AddDoorActivity"
>

    <Button
            android:text="CONFIRMER"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonConfirmerPorte"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/recycler_view_rooms"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <ImageView
            android:layout_width="403dp"
            android:layout_height="446dp"
            app:srcCompat="@drawable/room"
            android:id="@+id/imageViewAddDoor"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
    />
    <SurfaceView
            android:layout_width="405dp"
            android:layout_height="446dp"
            android:id="@+id/surfaceView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/imageViewAddDoor"
    />
    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="322dp"
            android:layout_height="175dp"
            android:id="@+id/recycler_view_rooms"
            tools:listitem="@layout/item_room"
            tools:ignore="MissingConsraints"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.494"
            app:layout_constraintTop_toBottomOf="@+id/imageViewAddDoor"
            android:layout_marginTop="24dp"
    />
    <ImageButton
            android:layout_width="70dp"
            android:layout_height="66dp"
            app:srcCompat="@drawable/trash"
            android:id="@+id/imageButtonTrash"
            android:scaleType="fitXY"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="12dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>