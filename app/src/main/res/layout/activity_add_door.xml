<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".AddDoorActivity"
>

    <TextView
            android:text="AJOUT PORTE"
            android:layout_width="409dp"
            android:layout_height="56dp"
            android:id="@+id/textView"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@android:color/holo_green_light"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="20dp"
    />
    <ImageView
            android:layout_width="1080px"
            android:layout_height="1080px"
            app:srcCompat="@drawable/room"
            android:id="@+id/imageViewAddDoor"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="136dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
    />
    <Button
            android:text="CONFIRMER"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonConfirmerPorte"
            app:layout_constraintTop_toBottomOf="@+id/imageViewAddDoor"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="44dp"
            app:layout_constraintHorizontal_bias="0.498"
    />
    <SurfaceView
            android:layout_width="1080px"
            android:layout_height="1080px"
            android:id="@+id/surfaceView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="136dp"
    />

</androidx.constraintlayout.widget.ConstraintLayout>