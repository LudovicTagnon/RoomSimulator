<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ViewRoomActivity">

    <ImageView
            android:layout_width="400dp"
            android:layout_height="400dp"
            app:srcCompat="@drawable/room"
            android:id="@+id/imageViewCourante"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
    <ImageButton
            android:layout_width="70dp"
            android:layout_height="70dp"
            app:srcCompat="@android:drawable/ic_media_play"
            android:id="@+id/imageButtonRight"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toBottomOf="@+id/imageViewCourante"
            android:layout_marginTop="12dp" android:layout_marginEnd="16dp" tools:ignore="SpeakableTextPresentCheck"/>
    <ImageButton
            android:layout_width="70dp"
            android:layout_height="70dp"
            app:srcCompat="@android:drawable/ic_media_play"
            android:id="@+id/imageButtonLeft"
            android:rotation="180" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageViewCourante" android:layout_marginTop="12dp"
            android:layout_marginStart="16dp" tools:ignore="SpeakableTextPresentCheck"/>

</androidx.constraintlayout.widget.ConstraintLayout>